pipeline {
    agent { node { label 'workstation' } }
    stages {
        stage('Example') {
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                }
            }
            options {
                            timeout(time: 5, unit: 'SECONDS')
                        }
            steps {
                echo "Hello, ${PERSON}, nice to meet you."
            }
        }
    }
}